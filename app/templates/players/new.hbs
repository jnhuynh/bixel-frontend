<h1>Create a new Player</h1>

<form role="form">
  <div class="form-group">
    <label for="new-placeholder-name">Name</label>
    {{input
      type="text"
      classNames="form-control"
      id="new-player-name"
      placeholder="Enter a name"
      value=name}}
  </div>

  <button type="submit" class="btn btn-primary" {{action "createPlayer"}}>
    Join the Game
  </button>
</form>
