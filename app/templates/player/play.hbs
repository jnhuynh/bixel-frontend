<h1>Play</h1>

<div>
  <button class="btn btn-primary" {{action exitArea area}}>
    Exit {{area.name}}
  </button>
</div>

<div>
  <button class="btn btn-default" {{action move "up"}}>
    <span class="glyphicon glyphicon-chevron-up"></span>
  </button>
  <button class="btn btn-default" {{action move "down"}}>
    <span class="glyphicon glyphicon-chevron-down"></span>
  </button>
  <button class="btn btn-default" {{action move "left"}}>
    <span class="glyphicon glyphicon-chevron-left"></span>
  </button>
  <button class="btn btn-default" {{action move "right"}}>
    <span class="glyphicon glyphicon-chevron-right"></span>
  </button>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>X</th>
      <th>Y</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{{id}}</td>
      <td>{{name}}</td>
      <td>{{x}}</td>
      <td>{{y}}</td>
    </tr>
  </tbody>
</table>

<h2>Other Players in Area</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>X</th>
      <th>Y</th>
    </tr>
  </thead>
  <tbody>
    {{#each otherPlayer in otherPlayers}}
      <tr>
        <td>{{otherPlayer.id}}</td>
        <td>{{otherPlayer.name}}</td>
        <td>{{otherPlayer.x}}</td>
        <td>{{otherPlayer.y}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
